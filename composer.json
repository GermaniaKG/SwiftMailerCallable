{
    "name": "germania-kg/swiftmailer-callable",

    "type": "library",
    "license": "MIT",

    "authors": [{
        "name": "Carsten Witt",
        "email": "carstenwitt@germania-kg.de",
        "role": "Developer"
    }],

    "autoload": {
        "psr-4": {
            "Germania\\SwiftMailerCallable\\": "src/"
        }
    },

